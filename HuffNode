#pragma once
class HuffNode
{
public:
	virtual ~HuffNode(){}
	virtual int weight() = 0;
	virtual  bool isLeaf() = 0;
	virtual void setLeftC(bool c) = 0;
	virtual void setParent(HuffNode* p) = 0;
	virtual HuffNode* getParent() = 0;
	virtual bool isLeft() = 0;
	virtual HuffNode* const leftChild() = 0;
	virtual HuffNode* const rightChild() = 0;
	virtual char val() = 0;
};
